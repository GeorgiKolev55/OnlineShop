@page "/productdata"

<PageTitle>Products</PageTitle>

@using OnlineShop.Data
@inject ProductService ProductService

<h3>Products</h3>

@if (products == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Product Name</th>
                <th>Unit Price</th>
                <th>Unit In Stock</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in products)
            {
                <tr>
                    <td>
                        <img src="@product.Image">
                    </td>
                    <td>
                        @product.ProductName
                    </td>
                    <td>
                        $@product.UnitPrice
                    </td>
                    <td>
                        @(product.UnitInStock != 0 ? product.UnitInStock : "Out of stock")
                    </td>
                    <td>
                        <button class="btn btn-primary" disabled="@(product.UnitInStock == 0)" @onclick="() => DecrementUnitInStock(product)">Buy unit</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private ICollection<Product>? products;

    protected override async Task OnInitializedAsync()
    {
        products = await ProductService.GetProductsAsync();
    }

    private void DecrementUnitInStock(Product product) => product.UnitInStock--;
}
